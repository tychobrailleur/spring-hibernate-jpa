<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate" template="/WEB-INF/template/template.jsp">
        <put-attribute name="header" value="/WEB-INF/template/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/template/footer.jsp" />
    </definition>

    <definition name="base" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/base.jsp"/>
    </definition>

    <definition name="screen" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/screen.jsp"/>
    </definition>

</tiles-definitions>